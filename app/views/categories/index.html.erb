<div class="row">
  <main class="small-12 columns">
    <ul class="row inline-list cat-list">
    <div id="goal">
      <h3>Click any category to show list of goals available</h3>
    </div>

      <% @categories.each do |category| %>
      <li class="small-6">
        <div class="category">

        <a href="/<%=  category.title  %> "><%=  inline_svg(category.image_url) %>
          <h1><%= category.title %></h1></a>
        </div>
      </li>
      <% end %>

    </ul>
  </main>
</div>
