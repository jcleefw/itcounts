.footer-section {
  background-color: $blue;
  font-size:0.8em;
  padding: $normal-pad $small-pad;
  .statement {
    padding: 0 0 $normal-pad 0;
    margin-bottom: $normal-pad;
  }
  .social-btn, aside {
    width: 48%;
    display:inline-block;
    vertical-align: top;
  }
}

.social-btn ul {
  li{
    width: 35px;
    display:inline-block;
  }
  svg{
    width: 100%;
    fill: $dark-gray;
  }
}

@media only screen and (max-width: 400px) {
  .footer-section {
    .social-btn, aside {
      width: 100%;
    }
  }
  aside{
    img{
      width: 50%;
    }
  }

} /* max-width 640px, mobile-only styles, use when QAing mobile issues */
