.user {
  text-align: center;
}
.user-info {
  .tab-title {
    a{
      text-decoration: none;
      padding: 0.3rem 2rem;
      color: $white;
      background-color: $light-gray;
    }
    a:active, a:focus {
      outline: none;
    }
    span {
      font-size: 2em;
    }
    p{
      font-size: .8em;
    }
  }

  .tabs {

    .tab-title.active a {
      color: $dark-gray;
    }
  }


  li {
    list-style: none;
  }
}

.account-data {
  li{
    padding:10px 0;
  }
}