.cat-list li{
  margin:0;
}

.cat-list {
  .category {
    width: 100%;
    position:relative;
    padding: 30px;
    h1{
      padding: $normal-pad 0;
      font-size: 1em;
    }
    svg{
      height: 120px;
      width: 100%;
      cursor:pointer;
      #cat-icons{
        fill: $white;
      }
      &:hover #cat-icons{
        fill: $yellow;
      }
    }
  }
}

// category show page styling
.cat-show {
  width: 100%;
  text-align: left;
  height: 120px;
  margin-bottom: $small-pad;

  //@include box-shadow(rgba($black,.3) 1px 1px 5px);
  .overlay-progress{
    height: 120px;
    position: absolute;
    opacity: 0.5;
    z-index: 1;
    background: url(<%= asset_path 'bg/progress-bg.png' %>) ;
    width:0;

  }
  .cat-info {
    z-index: 5;
    position: absolute;
    width: 100%;
  }
}
.cat-show:hover {
  .goal-info {
    color: $cadet-blue;
  }
}

.cat-image {
  width: 25%;
  display:inline-block;
  padding: $normal-pad;
  vertical-align: top;

  img {
    width:100%;
    max-height: 58px;
  }
}

.goal-info {
  display:inline-block;
  width: 70%;
  padding: $normal-pad;
  h1 {
    text-transform: uppercase;
    font-size: 1em;
  }
  p{
    font-weight: normal;
    font-size: 0.8em;
  }
}

.participation-info{
  display:block;
  font-size: 0.8em;
  color: $blue;
  padding: 0 $normal-pad;
  p{
    display: inline-block;
    &:first-child {
      width: 70%;
      text-align:left;
    }
    &:last-child {
      width: 29%;
      text-align:right;
    }
  }
}


